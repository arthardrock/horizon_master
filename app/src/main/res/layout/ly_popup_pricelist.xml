<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_condition"
            android:layout_marginTop="5dp"
            style="@style/Text_bold_30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="เงื่อนไข" />
        <LinearLayout
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:orientation="vertical"
            android:id="@+id/btn_close"
            android:layout_alignParentRight="true"
            android:layout_width="30dp"
            android:layout_height="30dp">
            <ImageView
                android:tint="@color/colorBlack"
                android:src="@drawable/ic_action_cancle"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/btn_close"
            android:orientation="vertical">

            <Spinner
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:id="@+id/sp_branch"
                style="@style/Text_20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/custom_tab_layout_height"/>
            <Button
                android:id="@+id/btn_confirm"
                android:text="@string/btn_confirm"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:layout_height="50dp" />
        </LinearLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>