<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="horizont.com.pmart.horizon.fragment.ClLogin">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_marginTop="@dimen/custom_tab_layout_height"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="3dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10px">
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--EditText-->
                <LinearLayout
                    android:background="@drawable/shape_item_inside"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <EditText
                        android:id="@+id/edt_phone"
                        android:hint="@string/txt_phone"
                        android:textColor="@color/colorBlack"
                        style="@style/Text_20dp"
                        android:paddingLeft="10dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="60dp" />

                </LinearLayout>
                <!--blankSpace-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp">
                </LinearLayout>
                <!--EditText-->
                <LinearLayout
                    android:background="@drawable/shape_item_inside"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <EditText
                        android:id="@+id/edt_password"
                        android:hint="@string/txt_password"
                        android:textColor="@color/colorBlack"
                        style="@style/Text_20dp"
                        android:paddingLeft="10dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="60dp" />

                </LinearLayout>
                <!--blankSpace-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <Button
                        android:id="@+id/btn_confirm"
                        style="@style/Text_30dp"
                        android:textColor="@color/colorWhite"
                        android:text="@string/btn_confirm"
                        android:background="@color/colorRed"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </FrameLayout>

</RelativeLayout>