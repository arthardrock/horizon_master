<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="horizont.com.pmart.horizon.fragment.ClLogin">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:id="@+id/content_regs"
            android:layout_marginTop="@dimen/custom_tab_layout_height"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="3dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10px">

            <LinearLayout
                android:layout_marginTop="@dimen/custom_tab_layout_height"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--EditText-->
                <LinearLayout
                    android:background="@drawable/shape_item_inside"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <EditText
                        android:id="@+id/edt_phone"
                        android:hint="@string/txt_phoneOrmail"
                        android:textColor="@color/colorBlack"
                        style="@style/Text_20dp"
                        android:paddingLeft="10dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"/>

                </LinearLayout>
                <!--blankSpace-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp">
                </LinearLayout>
                <!--EditText-->
                <LinearLayout
                    android:background="@drawable/shape_item_inside"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <EditText
                        android:id="@+id/edt_password"
                        android:hint="@string/txt_password"
                        android:inputType="textPassword"
                        android:textColor="@color/colorBlack"
                        style="@style/Text_20dp"
                        android:paddingLeft="10dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="60dp" />


                </LinearLayout>
                <!--blankSpace-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="แสดงรหัสผ่าน" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <Button
                        android:id="@+id/btn_confirm"
                        style="@style/Text_30dp"
                        android:textColor="@color/colorWhite"
                        android:text="@string/btn_confirm"
                        android:background="@drawable/shape_item"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <TextView
                    android:paddingTop="10dp"
                    android:id="@+id/txt_forgotpass"
                    style="@style/Text_20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/txt_forgetpass"
                    android:textColor="@color/colorBlack" />
                <TextView
                    android:id="@+id/txt_device"
                    style="@style/Text_20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </FrameLayout>
</RelativeLayout>