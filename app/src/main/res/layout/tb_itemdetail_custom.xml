<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <android.support.v7.widget.Toolbar
        android:id="@+id/custom_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorRed"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <ImageView
            android:layout_above="@+id/frame_layout"
            android:id="@+id/img_back"
            android:background="@drawable/ic_action_back"
            android:layout_width="50dp"
            android:layout_height="?attr/actionBarSize" />

        <ImageView
            android:id="@+id/img_title"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
        <TextView
            android:gravity="center_vertical"
            style="@style/Text_bold_15dp"
            android:id="@+id/txt_tile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <FrameLayout
            android:id="@+id/img_basket"
            style="?attr/actionButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:clipToPadding="false"
            android:layout_gravity="right"
            android:focusable="true">
            <ImageView
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_action_busket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/count_notif"
                style="@style/Text_10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right|end|top"
                android:layout_marginEnd="-5dp"
                android:layout_marginRight="-5dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/badge_backgroud"
                android:gravity="center_horizontal"
                android:padding="3dp"
                android:text="0" />
        </FrameLayout>

    </android.support.v7.widget.Toolbar>
</android.support.design.widget.AppBarLayout>